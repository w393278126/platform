
@using Plu.Platform.Domain.TourUser;
@using Xn.Platform.Domain;
@model PagedEntity<TourUserModel>
@{
    ViewBag.Title = "用户列表";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<body>
    <div class="page-content-wrap">


        <form class="layui-form" action="">
            <div class="layui-form-item">
                <div class="layui-inline tool-btn">
                    <button class="layui-btn layui-btn-small layui-btn-normal go-btn hidden-xs" data-id="0" data-url="@Url.Action("Edit","TourUser")"><i class="layui-icon">&#xe654;</i></button>
                    <button class="layui-btn layui-btn-small layui-btn-warm listOrderBtn hidden-xs" data-url="/admin/category/listorderall.html"><i class="iconfont">&#xe656;</i></button>
                </div>
                <div class="layui-inline">
                    <input type="text" name="title" placeholder="请输入用户名称" autocomplete="off" class="layui-input">
                </div>
                <button class="layui-btn layui-btn-normal" lay-submit="search">搜索</button>
            </div>
        </form>

        <div class="layui-form" id="table-list">
            <table class="layui-table" lay-skin="line">
                <colgroup>
                    <col width="50">
                    <col class="hidden-xs" width="50">
                    <col width="100">
                    <col width="100">
                    <col>
                    <col width="100">
                    <col width="130">
                </colgroup>
                <thead>
                    <tr>
                        <th>头像</th>
                        <th class="hidden-xs">ID</th>
                        <th>用户名称</th>
                        <th>昵称</th>
                        <th>性别</th>
                        <th>真实姓名</th>
                        <th>手机号码</th>
                        <th>省</th>
                        <th>市</th>
                        <th>区</th>
                        <th>地址</th>
                        <th>星力值</th>
                        <th>星牛币</th>
                        <th>注册时间</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr id='node-@item.id' class="parent collapsed">
                            <td><img src="~/Img/head/timg.jpg" width="40" height="40" /></td>
                            <td class="hidden-xs">@item.id</td>
                            <td class="hidden-xs">@item.username</td>
                            <td>@item.nick_name</td>
                            <td>@item.sex</td>
                            <td class="hidden-xs">@item.real_name</td>
                            <td>@item.mobile</td>
                            <td>@item.prvinice</td>
                            <td>@item.city</td>
                            <td>浦东新区</td>
                            <td>华夏中路星月金融湾21栋101</td>
                            <td>100</td>
                            <td>27.12</td>
                            <td>@item.create_time</td>
                            <td><i class="layui-icon" style="font-size: 25px; color:green;">&#x1005;</i></td>
                            <td>
                                <div class="layui-inline">
                                    <button class="layui-btn layui-btn-mini layui-btn-normal  go-btn" data-id="1" data-url="/tourUsers/Edit?Id=1"><i class="layui-icon">&#xe642;</i></button>
                                    <button class="layui-btn layui-btn-mini layui-btn-danger del-btn" data-id="1" data-url="menu-add.html"><i class="layui-icon">&#xe640;</i></button>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div id="pageDiv" style="text-align:right"></div>
        </div>

    </div>
    <script>
        layui.use(['laypage', 'jquery', 'layer'], function () {
            var laypage = layui.laypage;
            //调用分页
            laypage({
                cont: 'pageDiv'
                , curr: parseInt('@ViewBag.PageIndex')
                , pages: @Model.TotalItems/2 //得到总页数
                , groups: 5
                , jump: function (obj, first) {
                    var curr = obj.curr;
                    if (!first) {
                       location.href = "/TourUser/Index?pageIndex=" + curr;
                    }
                }
            });



        });

    </script>
</body>
